<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/carview_corner_radius"
    app:cardElevation="@dimen/cardview_elevation">

    <ImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/poster_margin"
        android:layout_marginLeft="@dimen/poster_margin"
        android:layout_marginRight="@dimen/poster_margin"
        android:layout_marginTop="@dimen/poster_margin"
        tools:src="@mipmap/ic_launcher" />

</android.support.v7.widget.CardView>